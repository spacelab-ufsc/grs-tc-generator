# Configurações da Aplicação
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=sua_chave_secreta_aqui

# Configurações do Banco de Dados
DB_TYPE=postgres  # ou 'sqlite' para SQLite

# PostgreSQL
DB_NAME=tc_generator
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# SQLite (usado apenas se DB_TYPE=sqlite)
# SQLITE_DATABASE=instance/tc_generator.db

# Configurações de Segurança
JWT_SECRET_KEY=sua_chave_jwt_secreta
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hora

# Configurações de Log
LOG_LEVEL=INFO

# Configurações de E-mail (opcional)
# MAIL_SERVER=smtp.example.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=seu_email@example.com
# MAIL_PASSWORD=sua_senha
# MAIL_DEFAULT_SENDER=seu_email@example.com
